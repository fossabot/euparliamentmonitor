{
  "source": {
    "include": ["scripts/"],
    "includePattern": ".+\\.js$",
    "excludePattern": "(node_modules/|test/)"
  },
  "opts": {
    "destination": "docs/api",
    "recurse": true,
    "readme": "README.md",
    "template": "node_modules/docdash"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "tags": {
    "allowUnknownTags": true
  }
}
